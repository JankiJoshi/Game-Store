@model CVGS.user

@{
    ViewBag.Title = "Edit";
}

<h2>Edit Profile</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>@Session["User"]</h4>
