@model CVGS.user

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>user</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Username
        </dt>

        <dd>
            @Html.DisplayFor(model => model.username)
        </dd>

        <dt>
            First Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.firstName)
        </dd>

        <dt>
            Last Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.lastName)
        </dd>

        <dt>
            E-Mail
        </dt>

        <dd>
            @Html.DisplayFor(model => model.email)
        </dd>
        @if (Model.username == Session["User"].ToString())
        {
            <dt>
                Mailing Address
            </dt>

            <dd>
                @Html.DisplayFor(model => model.mailAddress)
            </dd>

            <dt>
                Ship Address
            </dt>

            <dd>
                @Html.DisplayFor(model => model.shipAddress)
            </dd>

            <dt>
                Age
            </dt>

            <dd>
                @Html.DisplayFor(model => model.age)
            </dd>

            <dt>
                Do you receive promotional e-mails?
            </dt>

            <dd>
                @Html.DisplayFor(model => model.promoEmails)
            </dd>

            <dt>
                Is your wishlist public?
            </dt>

            <dd>
                @Html.DisplayFor(model => model.publicWishlist)
            </dd>

        }

        <dt>
            Favorite platform
        </dt>

        <dd>
            @Html.DisplayFor(model => model.favPlatform)
        </dd>

        <dt>
            Second favorite platform
        </dt>

        <dd>
            @Html.DisplayFor(model => model.favPlatform2)
        </dd>

        <dt>
            Favorite genre
        </dt>

        <dd>
            @Html.DisplayFor(model => model.favGenre)
        </dd>

        <dt>
            second favorite genre
        </dt>

        <dd>
            @Html.DisplayFor(model => model.favGenre2)
        </dd>

    </dl>
</div>
<p>
    @if (Model.username == Session["User"].ToString())
    {
        @Html.ActionLink("View Wishlist", "Index", "Wishlist", new { id = Model.username }, null);
        <br />
        @Html.ActionLink("Edit Profile", "Edit", new { id = Model.username });
        <br />
        <a runat="server" href="~/Account/ChangePassword">Change Password</a>
        <br />
        <a runat="server" href="/creditInformation/Index">View/Edit Credit Card Information</a>
        <br />
    }

    @Html.ActionLink("Back to List", "Index")
</p>
