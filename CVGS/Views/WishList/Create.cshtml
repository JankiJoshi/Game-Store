@model CVGS.wishList

@{
    ViewBag.Title = "Add to Wishlist";
}

<h2>Add to Wishlist</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.username, "Current User:", htmlAttributes: new { @class = "hidden" })
        <div class="col-md-10">
            @Html.DropDownList("username", null, htmlAttributes: new { @class = "hidden",  })
            @Html.ValidationMessageFor(model => model.username, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.gameId, "Game:", htmlAttributes: new { @class = "hidden" })
        <div class="col-md-10">
            @Html.DisplayFor(model => model.game.name)
            @Html.ValidationMessageFor(model => model.gameId, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <dl class="dl-horizontal">

            <dd>
                @Html.DisplayFor(model => model.game.name)
            </dd>

        </dl>
        
        <div class="col-md-offset-2 col-md-10">
            Add this game to your wishlist?
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Add to wishlist" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
