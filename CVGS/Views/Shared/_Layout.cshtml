<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    @if (Session["Check"] == null)
    {
        Response.Redirect("/Account/Login");

    }
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("CVGS", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                @*<ul class="nav navbar-nav">*@
                <ul class="nav navbar-nav">
                    <li><a runat="server" href="~/Default">Home</a></li>
                    <li><a href="/Event/Index">Events</a></li>
                    <li><a runat="server" href="/Game/Index">Games</a></li>
                    <li><a runat="server" href="/User/Index">Users</a></li>
                    <li><a runat="server" href="/Cart/Index">Cart</a></li>
                    <li><a runat="server" href="/FriendsAndFamily/Index">Friends</a></li>
                    <li><a runat="server" href="/Orders/Index">Orders</a></li>

                    @if (Session["Emp"] != null)
                    {
                        <li><a runat="server" href="~/Reports">Reports</a></li>
                    }
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li>@Html.ActionLink("View Profile", "Details", "User", new { id = Session["User"].ToString() }, null)</li>
                    <li>
                        <a runat="server" href="~/Account/Login" onserverclick="LoggingOut">Log Out</a>
                    </li>
                </ul>
                @*</ul>*@
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>